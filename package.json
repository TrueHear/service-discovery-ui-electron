{
  "name": "truehear-device-detector",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.js",
  "build": {
    "appId": "com.truehear.id",
    "productName": "truehear-device-detector-new",
    "asar": false,
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      "app-config.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "icon": "public/thmainlogo",
    "win": {
      "icon": "public/thmainlogo.ico"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "prebuildconfig": "node scripts/loadEnv.js",
    "electron-build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "service-discovery-lib": "^1.0.3",
    "tailwindcss": "^4.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  }
}
